{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "target": "es2020",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*"],
  "exclude": ["node_modules"]
}
